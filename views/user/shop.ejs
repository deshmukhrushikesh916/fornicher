<%- include("navbar.ejs") %>

		
		<!-- Start Hero Section -->
        <div class="hero">
            <div class="container">
                <div class="row justify-content-between">
                    <div class="col-lg-5">
                        <div class="intro-excerpt">
                            <h1>
                               <%=shop_banner_info.banner_title%>
                            </h1>
                            <p class="mb-4">
                                <%=shop_banner_info.banner_details%>
                            </p>
                            <p><a href="<%=shop_banner_info.banner_link%>" 
                                target="_blank" class="btn btn-secondary me-2">Shop Now</a><a href="/shop" class="btn btn-white-outline">Explore</a></p>
                        </div>
                    </div>
                    <div class="col-lg-7">
                        <div class="hero-img-wrap">
                            <img src="/uploads/<%=shop_banner_info.banner_image%>" class="img-fluid">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <!-- End Hero Section -->

    

    <div class="untree_co-section product-section before-footer-section">
        <div class="container">
              <div class="row">
                <% for(i=0;i<products.length;i++) 
                
                {
                    var imgs = products[i].product_image.split(',');
                    var img = "";
                    for(var j=0;j<imgs.length;j++)
                    {
                        if(imgs[j]!='')
                        {
                             img = imgs[j]; 
                            break;

                        }
                       }
                     %>
                  <!-- Start Column 1 -->
                <div class="col-12 col-md-4 col-lg-4 mb-5">
                    <a class="product-item" href="/product_info/<%=products[i].product_id%>">
                        <img src="/uploads/<%=img%>" class="img-fluid product-thumbnail">
                        <h3 class="product-title">
                            <%=products[i].product_name%>
                        </h3>
                        <strong class="product-price">&#8377; <%=products[i].product_price%></strong>

                        <span class="icon-cross">
                            <img src="images/cross.svg" class="img-fluid">
                        </span>
                    </a>
                </div> 
                <!-- End Column 1 -->
                    <% } %>
              </div>
              <style>
                .btn-light{
                    background-color: white;
                    border: 1x solid black;
                    color:black;
                }
                
              </style>
              <div class="row">
                <div class="col-12 text-center">
                    <% for(i=1;i<=ttl_pages;i++) { %>
                        <a href="/shop?page_no=<%=i%>" style="text-decoration: none;">
                        <button class="btn <%=((page_no == i) ? 'btn primary':'btn-light')%>">
                            <%=i%>
                        </button>
                    </a>
                           <% } %>
                    

                </div>
              </div>
        </div>
    </div>

<%- include("footer.ejs") %>