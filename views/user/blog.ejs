<%- include("navbar.ejs") %>

<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1><%=blog_banner.banner_title%></h1>
                    <p class="mb-4"><%=blog_banner.banner_details%></p>
                    <p><a href="<%=blog_banner.banner_link%>" class="btn btn-secondary me-2">Shop Now</a><a href="#" class="btn btn-white-outline">Explore</a></p>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="hero-img-wrap">
                    <img src="/uploads/<%=blog_banner.banner_image%>" class="img-fluid">

                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Hero Section -->



<!-- Start Blog Section -->
<div class="blog-section">
<div class="container">
    
    <div class="row">

        <% for(var i=0;i<blog_info.length;i++)
                { %>
                    <div class="col-12 col-sm-6 col-md-4 mb-5">
                        <div class="post-entry">
                            <a href="#" class="post-thumbnail"><img src="/uploads/<%=blog_info[i].blog_image%>" alt="Image" class="img-fluid"></a>
                            <div class="post-content-entry">
                                <h3><a href="#"><%=blog_info[i].blog_title%></a></h3>
                                <div class="meta">
                                    
                                    <span>by <a href="#"><%=blog_info[i].blog_post_by%></a></span> <span>on <a href="#"><%=blog_info[i].blog_post_date%>,</a>
                                        <a href="#"><%=blog_info[i].blog_post_time%></a></</span>
                                </div>
                                <h6 class="mt-2 fw-bold text-dark"><%=blog_info[i].blog_details%></h6>
                            </div>
                        </div>
                    </div>
                 <% } %>

                 <% for(var i=0;i<blog_info.length;i++)
                 { %>
                     <div class="col-12 col-sm-6 col-md-4 mb-5">
                         <div class="post-entry">
                             <a href="#" class="post-thumbnail"><img src="/uploads/<%=blog_info[i].blog_image%>" alt="Image" class="img-fluid"></a>
                             <div class="post-content-entry">
                                 <h3><a href="#"><%=blog_info[i].blog_title%></a></h3>
                                 <div class="meta">
                                     
                                     <span>by <a href="#"><%=blog_info[i].blog_post_by%></a></span> <span>on <a href="#"><%=blog_info[i].blog_post_date%>,</a>
                                         <a href="#"><%=blog_info[i].blog_post_time%></a></</span>
                                 </div>
                                 <h6 class="mt-2 fw-bold text-dark"><%=blog_info[i].blog_details%></h6>
                             </div>
                         </div>
                     </div>
                  <% } %>

                  <% for(var i=0;i<blog_info.length;i++)
                  { %>
                      <div class="col-12 col-sm-6 col-md-4">
                          <div class="post-entry">
                              <a href="#" class="post-thumbnail"><img src="/uploads/<%=blog_info[i].blog_image%>" alt="Image" class="img-fluid"></a>
                              <div class="post-content-entry">
                                  <h3><a href="#"><%=blog_info[i].blog_title%></a></h3>
                                  <div class="meta">
                                      
                                      <span>by <a href="#"><%=blog_info[i].blog_post_by%></a></span> <span>on <a href="#"><%=blog_info[i].blog_post_date%>,</a>
                                          <a href="#"><%=blog_info[i].blog_post_time%></a></</span>
                                  </div>
                                  <h6 class="mt-2 fw-bold text-dark"><%=blog_info[i].blog_details%></h6>
                              </div>
                          </div>
                      </div>
                   <% } %>

    </div>
</div>
</div>
<!-- End Blog Section -->	



<!-- Start Testimonial Slider -->
<div class="testimonial-section before-footer-section">
<div class="container">
    <div class="row">
        <div class="col-lg-7 mx-auto text-center">
            <h2 class="section-title">Testimonials</h2>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="testimonial-slider-wrap text-center">

                <div id="testimonial-nav">
                    <span class="prev" data-controls="prev"><span class="fa fa-chevron-left"></span></span>
                    <span class="next" data-controls="next"><span class="fa fa-chevron-right"></span></span>
                </div>

                <div class="testimonial-slider">
                    
                    <% for(var i=0;i<testimonials_info.length;i++){ %>
                                    
                        <div class="item">
                            <div class="row justify-content-center">

                                <div class="col-lg-8 mx-auto">

                                    <div class="testimonial-block text-center">
                                        <blockquote class="mb-5">
                                            <p>&ldquo;<%=testimonials_info[i].customer_message%>&rdquo;</p>
                                        </blockquote>

                                        <div class="author-info">
                                            <div class="author-pic">
                                                <img src="/uploads/<%=testimonials_info[i].customer_photo%>" alt="Maria Jones" class="img-fluid">
                                            </div>
                                            <h3 class="font-weight-bold"><%=testimonials_info[i].customer_name%></h3>
                                            <span class="position d-block mb-3"><%=testimonials_info[i].customer_position%></span>
                                        </div>
                                    </div>

                                </div>
                                
                            </div>
                        </div>
                      <% } %>
                
                    <!-- END item -->

                </div>

            </div>
        </div>
    </div>
</div>
</div>
<!-- End Testimonial Slider -->
<%- include("footer.ejs") %>



