<%- include("navbar.ejs") %>
    <div class="container-fluid bg-white p-3">
        <div class="row">
            <div class="col-md-12">
                <h3>
                    ContactList
                </h3>
            </div>
            <div class="col-md-12">
                <table class="table table-bordered table-striped table-sm">
                    <tr>

                        <th>Action</th>
                        <th>Sr.No</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Address</th>

                    </tr>
                    <% for(var i=0;i<from_info.length;i++){ %>

                        <tr>
                            <td>
                                <a href="/admin/edit_from/<%=from_info[i].contact_from_id%>">
                                    <button class="text-primary border-0 fs-4 bg-white"><i class="fa-solid fa-pen-to-square"></i></button></a>
                                <a href="/admin/delete_from/<%=from_info[i].contact_from_id%>"onclick="return confirm('Are You Sure?')">
                                    <button class="text-danger border-0 fs-4 bg-white"><i class="fa-sharp fa-solid fa-trash"></i></button>
                                </a>
                                
                            </td>
                                
                            <td>
                                <%=i+1%>
                            </td>
                            <td>
                                <%=from_info[i].fname%>
                            </td>
                            <td>
                                <%=from_info[i].lname%>
                            </td>
                            <td>
                                <%=from_info[i].email%>
                            </td>
                            <td>
                                <%=from_info[i].message%>
                            </td>
                            

                        </tr>
                        <% } %>
                </table>
            </div>
        </div>
    </div>