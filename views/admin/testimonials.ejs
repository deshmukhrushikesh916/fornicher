<%-include('navbar.ejs')%>

<div class="container-fluid bg-white p-4">
    <form action="/admin/save_testimonials" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-12 mb-3 text-center">
                <h3>Testimonials</h3>
                </div>
            <div class="col-md-9">
                Customer photo
                <input class="form-control mb-4" type="file"  name="customer_photo">
            </div>

            <div class="col-md-4">
                Customer Name
                <input class="form-control mb-4" type="text"  name="customer_name">
            </div>

            <div class="col-md-4">
                Customer Position
                <input class="form-control mb-4" type="text"  name="customer_position">
            </div>

            <div class="col-md-4">
                Customer Message
                <input class="form-control mb-4" type="text"  name="customer_message">
            </div>

            <div class="col-md-12 text-center">
                <button class="btn btn-primary"> Save Customer </button>
            </div>
        </div>
    </form>
</div>

<br><br>


<div class="container-fluid bg-white">
    <div class="row">
        <div class="col-md-12 text-center text-dark">
            <h3>
                Testimonials List
            </h3>
        </div>
        
        <table class="table table-striped table-bordered mt-2">
            <tr>
               <th>Action</th>
                <th>Sr No</th>
                <th>Customer Name</th>
                <th>Customer Position</th>
                <th>Customer Message</th>
                <th>Customer Photo</th>
            </tr>
            <%
            for(i=0;i<test_data.length;i++){
                %>
              <tr>

                <td>
                    <a href="/admin/edit_testimonials/<%=test_data[i].testimonial_id%>">
                        <button class="text-primary border-0 fs-4 bg-white"><i class="fa-solid fa-pen-to-square"></i></button></a>
                    <a href="/admin/delete_testimonials/<%=test_data[i].testimonial_id%>" onclick="return confirm('Are You Sure?')">
                      <button class="text-danger border-0 fs-4 bg-white"><i class="fa-sharp fa-solid fa-trash"></i>
                    </button></a>
                </td>   
                <td><%=i+1%></td>
                <td><%=test_data[i].customer_name%></td>
                <td><%=test_data[i].customer_position%></td>
                <td style="width:45%;"><%=test_data[i].customer_message%></td>
                <td>
                    <img src="/uploads/<%=test_data[i].customer_photo%>" width="70px" alt="" height="60px">
                
                </td>          
              </tr>
         <%
            }
            %>
        
          
        </table> 
        </div>
    </div>
</div>

<%-include('footer.ejs')%>
