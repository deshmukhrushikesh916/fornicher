<%- include("navbar.ejs") %>
<div class="container-fluid bg-white p-3">
    <div class="row">
        <div class="col-md-12">
            <h3>
                Key Point List
            </h3>
        </div>
        <div class="col-md-12">
            <table class="table table-bordered table-striped table-sm">
             <tr>
                <th>Action</th>
                <th>Sr.No</th>
                <th>Heading</th>
                <th>Deatails</th>
                <th>Image</th>
                
             </tr>
             <% for(var i=0;i<key_point_info.length;i++){ %>
               
                <tr>
                    <td>
                        <a href="/admin/key_point_edit/<%=key_point_info[i].key_point_id %>"><button class="text-primary border-0 fs-4 bg-white"><i class="fa-solid fa-pen-to-square"></i></button></a>
                        <a href="/admin/key_point_delete/<%=key_point_info[i].key_point_id %>" onclick="return confirm('Are You Sure')"><button class="text-danger border-0 fs-4 bg-white"><i class="fa-sharp fa-solid fa-trash"></i></button></a>

                    </td>
                    <td><%=i+1%></td>
                    <td><%=key_point_info[i].why_choose_headnig%></td>
                    <td style="width:60%;"><%=key_point_info[i].why_choose_details%></td>
                    <td>
                        <div>
                            <img src="/uploads/<%=key_point_info[i].key_point_image%>"style="height:50px;width:auto;margin-left:5px;">
                        </div>
                    </td>
                   
                </tr>
             <% } %>
            </table>
        </div>
    </div>
</div>

<%- include("footer.ejs") %>
