<%- include("navbar.ejs") %>

<form action="/admin/save_product_type" method="post">
    <div class="container-fluid p-4 bg-white">
      <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h3>Add Product Type</h3>
        </div>
        <div class="col-md-6 mt-3">
          Enter Type
          <input type="text" name="product_type_name" class="form-control">
        </div>
        <div class="col-md-2 mt-3">
          <br>
          <button class="btn btn-primary">Save Product Type</button>
        </div>
     </div>
    </div>
</form>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 text-center mt-3">
            <h3>All Product Types</h3>
        </div>
        <div class="col-md-12 mt-2">
            <table class=" table table-bordered">
                <tr class="fs-bolder">
                    <th>Action</th>
                    <th>SrNo.</th>
                    <th>Type</th>
                </tr>
                <% for(i=0;i<types.length;i++) 
                { %>
                   <tr>
                    <td>
                    <a href="/admin/edit_list/<%=types[i].product_type_id%>"><button class="text-primary border-0 fs-4"><i class="fa-solid fa-pen-to-square"></i></button></a>
                    <a href="/admin/delete_list/<%=types[i].product_type_id%>" onclick="return confirm('Are You Sure')"><button class="text-danger border-0 fs-4 "><i class="fa-sharp fa-solid fa-trash"></i></button></a>
                    </td>
                    <td><%=1+i%></td>
                    <td><%=types[i].product_type_name%></td>
                   </tr>
                <% } %>
            </table>
        </div>
    </div>
</div>
<%- include("footer.ejs") %>