<%-include('navbar.ejs')%>

<div class="container-fluid">
    <form action="/admin/save_blog" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-12 mb-3 text-center text-dark">
                <h3>Blog</h3>
                </div>
            <div class="col-md-9">
                Enter blog image
                <input  type="file" name="blog_image" class="form-control mb-4">
                
            </div>

            <div class="col-md-4">
                Enter blog title
                <input  type="text" name="blog_title" class="form-control mb-4">
                
            </div>

            <div class="col-md-4">
                Enter blog details
                <input  type="text" name="blog_details" class="form-control mb-4">

                
            </div>

            <div class="col-md-4">
                Enter blog post date
                <input  type="date" name="blog_post_date" class="form-control mb-4">
                
            </div>

            <div class="col-md-4">
                Enter blog post time
                <input  type="time" name="blog_post_time" class="form-control mb-4">
                
            </div>

            <div class="col-md-4">
                Enter blog post by
                <input  type="text" name="blog_post_by" class="form-control mb-4">
                
            </div>

            <div class="col-md-4">
                Enter blog post by position
                <input  type="text" name="blog_post_by_position" class="form-control mb-4">                
            </div>

            <div class="col-md-12 text-center">
               <button class="btn btn-primary">save blog</button>              
            </div>
        </div>
    </form>
</div>
<br><br>


<div class="container-fluid bg-white p-3">
    <div class="row">
        <div class="col-md-12 text-center text-dark">
            <h3>
                Blog List
            </h3>
        </div>
        <table class="table table-striped table-bordered">
            <tr>
                
                <th>Action</th>
                <th>Sr.No</th>
                <th>Blog Title</th>
                <th>Blog Details</th>
                <th>Blog Post Date</th>
                <th>Blog Post Time</th>
                <th>Blog Post By</th>
                <th>Blog Position</th>
                <th>Image</th>
                
            </tr>
            
            <%
            for(i=0;i<blog_data.length;i++)
            {
                %>
              <tr>

                <td>
                <a href="/admin/edit_blogs/<%=blog_data[i].blog_id%>"><button class="text-primary border-0 fs-4 bg-white">
                    <i class="fa-solid fa-pen-to-square"></i></button></a>

                <a href="/admin/delete_blogs/<%=blog_data[i].blog_id%>"onclick="return confirm('Are You Sure?')">
                    <button class="text-danger border-0 fs-4 bg-white"><i class="fa-sharp fa-solid fa-trash"></i>
                    </button></a>
                </td> 
                <td><%=i+1%></td>
                <td><%=blog_data[i].blog_title%></td>
                <td style="width:16%;"><%=blog_data[i].blog_details%></td>
                <td><%=blog_data[i].blog_post_date%></td>
                <td style="width:10%;"><%=blog_data[i].blog_post_time%></td>
                <td><%=blog_data[i].blog_post_by%></td>
                <td style="width:10%;"><%=blog_data[i].blog_post_by_position%></td>
                <td>
                    <img src="/uploads/<%=blog_data[i].blog_image%>" width="80px" height="60px" alt="">
                
                </td>  
              </tr>
                <%
            }
            %>
            
        </table>
    </div>
</div>
</div>
<%-include('footer.ejs')%>