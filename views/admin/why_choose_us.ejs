<%- include("navbar.ejs") %>
<form action="/admin/save_why_choose_us" method="post" enctype="multipart/form-data">
<div class="container-fluid bg-white p-3">
    <div class="row">
        <div class="col-md-12 mb-3 text-center">
            <h3>Why Choose Us</h3>
        </div>
        <div class="col-md-6">
            Enter Heading
            <input type="text" name="why_choose_title" class="form-control mt-3" value="<%=why_choose_us_info[0].why_choose_title%>">
        </div>
        <div class="col-md-4">
            Image
            <input type="file" name="why_choose_image" class="form-control mt-3">
        </div>
        <div class="col-md-2">
            <img src="/uploads/<%=why_choose_us_info[0].why_choose_image%>" width="100%">
        </div>
        <div class="col-md-12 mt-3 text-center">
            <button class="btn btn-primary">Save Why Choose Us </button>
        </div>

    </div>
</div>
</form>
