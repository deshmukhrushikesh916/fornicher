
<%- include("navbar.ejs") %>

<div class="container-fluid bg-white p-3">
    <div class="row">
        <div class="col-md-12">
            <h3>
                All Product List
            <form action="/admin/product_search" method="get" class="float-end mb-2">
                <input type="text" name="str" class="form-control w-75 d-inline-block">
                <button class="border-0  btn btn-success"><i class="fa fa-search text-white"></i></button>
            </form>
            </h3>
        </div>
        <div class="col-md-12">
            <table class="table table-bordered table-striped table-sm">
             <tr>
                <th>Action</th>
                <th>Sr.No</th>
                <th>Product Type</th>
                <th>Product Name</th>
                <th>Product Price</th>
                <th>Product Size</th>
                <th>Product Color</th>
             </tr>
             <% for(var i=0;i<products.length;i++){ %>
               
                <tr>
                    <td>
                        <a href="/admin/product_edit/<%=products[i].product_id%>"><button class="text-primary border-0 fs-4 bg-white"><i class="fa-solid fa-pen-to-square"></i></button></a>
                        <a href="/admin/product_delete/<%=products[i].product_id%>" onclick="return confirm('Are You Sure')"><button class="text-danger border-0 fs-4 bg-white"><i class="fa-sharp fa-solid fa-trash"></i></button></a>

                    </td>
                    <td><%=i+1%></td>
                    <td><%=products[i].product_type_name%></td>
                    <td><%=products[i].product_name%></td>
                    <td> &#8377;<%=products[i].product_price%></td>
                    <td><%=products[i].product_size%></td>
                    <td>
                        <div style="height:30px;width:100%;background-color:<%=products[i].product_color%>"></div>
                    </td>
                </tr>
             <% } %>
            </table>
        </div>
    </div>
</div>


<%- include("footer.ejs") %>
